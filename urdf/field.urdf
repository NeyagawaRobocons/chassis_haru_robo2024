<robot name="example_robot">
  <link name="base_link">
    <!-- ロボットのモデルを指定 -->
    <visual>
      <geometry>
        <mesh filename="file://path/to/robot_model.stl" scale="1 1 1"/>
      </geometry>
    </visual>
  </link>
  
  <link name="map">
    <!-- フィールドのモデルを指定 -->
    <visual>
      <geometry>
        <mesh filename="file://path/to/field_model.stl" scale="1 1 1"/>
      </geometry>
    </visual>
  </link>